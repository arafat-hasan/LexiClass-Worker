    "version": "0.2.0",
    "configurations": [

        {
            "name": "Lexiclass Worker",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "celery",
            "args": [
                "--app=lexiclass_worker.celery",
                "worker",
                "--loglevel=INFO",
                "--concurrency=2"
            ],
            "envFile": "${workspaceFolder}/.env",
            }
    ]
}